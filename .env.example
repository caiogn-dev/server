# ============================================================================
# PASTITA PLATFORM - ENVIRONMENT VARIABLES
# ============================================================================
# Copy this file to .env and fill in your values
# ============================================================================

# =============================================================================
# DJANGO CORE
# =============================================================================
DJANGO_SETTINGS_MODULE=config.settings.production
DJANGO_SECRET_KEY=change-me-in-production-min-50-chars-long-key-here
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1,*.railway.app

# =============================================================================
# DATABASE (PostgreSQL)
# =============================================================================
# For local development with Docker:
DATABASE_URL=postgresql://postgres:postgres@db:5432/pastita

# For Railway (auto-provided):
# DATABASE_URL=${{Postgres.DATABASE_URL}}

# =============================================================================
# REDIS (Cache + Celery Broker)
# =============================================================================
# For local development with Docker:
REDIS_URL=redis://redis:6379/1
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0

# For Railway (auto-provided):
# REDIS_URL=${{Redis.REDIS_URL}}
# CELERY_BROKER_URL=${{Redis.REDIS_URL}}
# CELERY_RESULT_BACKEND=${{Redis.REDIS_URL}}

# =============================================================================
# LANGFLOW (AI Flows)
# =============================================================================
# Option 1: Local Docker
LANGFLOW_API_URL=http://langflow:7860

# Option 2: Railway Service
# LANGFLOW_API_URL=https://seu-langflow.up.railway.app

# Option 3: External
# LANGFLOW_API_URL=https://langflow.seu-dominio.com

LANGFLOW_API_KEY=
LANGFLOW_SUPERUSER=admin
LANGFLOW_SUPERUSER_PASSWORD=admin
LANGFLOW_SECRET_KEY=langflow-secret-key

# =============================================================================
# MERCADO PAGO (Payments)
# =============================================================================
# Sandbox
MERCADO_PAGO_ACCESS_TOKEN=TEST-xxx
MERCADO_PAGO_PUBLIC_KEY=TEST-xxx

# Production (use these in production)
# MERCADO_PAGO_ACCESS_TOKEN=APP_USR-xxx
# MERCADO_PAGO_PUBLIC_KEY=APP_USR-xxx

MERCADO_PAGO_WEBHOOK_SECRET=

# =============================================================================
# WHATSAPP BUSINESS API
# =============================================================================
WHATSAPP_WEBHOOK_VERIFY_TOKEN=seu-token-de-verificacao-webhook

# =============================================================================
# EMAIL (Resend)
# =============================================================================
RESEND_API_KEY=re_xxx
DEFAULT_FROM_EMAIL=noreply@pastita.com

# =============================================================================
# AWS S3 STORAGE (Optional)
# =============================================================================
USE_S3=False
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_STORAGE_BUCKET_NAME=
AWS_S3_REGION_NAME=us-east-1

# =============================================================================
# SECURITY & CORS
# =============================================================================
# Set to False in production
DEBUG=True

# SSL/TLS
SECURE_SSL_REDIRECT=False
SECURE_HSTS_SECONDS=0

# CORS - Additional origins allowed (comma-separated)
# These are added to the default list in settings
CORS_ALLOWED_ORIGINS=https://seu-dash.vercel.app,https://seu-outro-dominio.com
CSRF_TRUSTED_ORIGINS=https://backend.pastita.com.br

# =============================================================================
# MONITORING & LOGGING
# =============================================================================
LOG_LEVEL=INFO
SENTRY_DSN=

# =============================================================================
# RAILWAY SPECIFIC
# =============================================================================
# These are automatically set by Railway
# RAILWAY_ENVIRONMENT=production
# RAILWAY_SERVICE_NAME=web
# PORT=8000
